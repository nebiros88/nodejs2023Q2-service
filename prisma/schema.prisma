// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  login String @unique
  password String
  version Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Artist {
  id String @id @unique
  name String
  grammy Boolean

  albums Album[]

  @@map("artists")
}

model Album {
  id String @id @unique
  name String
  year Int
  artistId String?
  artist Artist? @relation(fields: [artistId], references: [id])


  @@map("albums")
}

model Track {
  id String @id @unique
  name String
  artistId String?
  albumId String?
  deration Int

  @@map("tracks")
}

