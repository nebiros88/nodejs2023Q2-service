// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id String @id @default(uuid())
  login String 
  password String
  version Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  favorites Favorites[]
  
  @@map("users")
}

model Artist {
  id String @id @default(uuid())
  name String
  grammy Boolean

  albums Album[]
  tracks Track[]
  favorites Favorites[]

  @@map("artists")
}

model Album {
  id String @id @default(uuid())
  name String
  year Int
  artistId String?

  arttist Artist? @relation(fields: [artistId], references: [id])
  tracks Track[]
  favorites Favorites[]

  @@map("albums")
}

model Track {
  id String @id @default(uuid())
  name String
  artistId String?
  albumId String?
  duration Int

  artist Artist? @relation(fields: [artistId], references: [id])
  album Album? @relation(fields: [albumId], references: [id])
  favorites Favorites[]

  @@map("tracks")
}

model Favorites {
  id String @id @default(uuid())
  artists Artist[] 
  albums Album[]
  tracks Track[]

  user User @relation(fields: [userId], references: [id])
  userId String
}
